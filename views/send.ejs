                <li><a href="/user">Register User</a></li>                
            </ul>
        </nav>
    </header>

    </br>

    <main>
      <h1>Send Push Notification to the registered devices</h1>
      <form id="" action="/sent" method="POST">
              <div id="">
                  <input type="hidden" name="_method" value="put">
                  <input type="text" id="title" name="title" ng-model="title" placeholder="Subject" required/> </br>
                  <textarea id="msg" name="msg" ng-model="msg" placeholder="Message" required></textarea></br>
<!--                   <select name="receiver" ng-model="receiver"  ng-options="option.value as option.name for option in typeOptions" class=""></select> -->
                  <button type="submit" class="button"/>Send Push Message</button> </br>
              </div>
      </form>
    </main>
<script>
